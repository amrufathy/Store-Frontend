<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/browser_actions_bg_grey"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_cart_product_name_and_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity x Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_cart_product_price"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cart_product_name_and_quantity"
            android:layout_marginTop="10dp"
            android:text="Product Price"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/ibtn_cart_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_cart_product_price"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:background="@color/browser_actions_bg_grey"
            android:src="@drawable/ic_delete_black_30dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>