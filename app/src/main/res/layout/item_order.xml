<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/browser_actions_bg_grey"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rl_item_order_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Order #1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_order_created_date"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_id"
            android:layout_marginTop="10dp"
            android:text="Order Date"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_order_id"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:background="@color/browser_actions_bg_grey"
            android:text="100 $"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>